{
    "defaultSeverity":"error",
    "extends":[
        "tslint:recommended"
    ],
    "jsRules":{

    },
    "rules":{
        "no-conditional-assignment":true,
        "no-consecutive-blank-lines":false,
        "no-console":{
            "severity":"warning",
            "options":[
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "member-access":[
            true,
            "check-accessor",
            "check-constructor",
            "check-parameter-property"
        ],
        "member-ordering":[
            true,
            {
                "order":"fields-first"
            }
        ],
        "no-empty-interface":true,
        "no-parameter-reassignment":true,
        "prefer-for-of":true,
        "promise-function-async":true,
        "typedef":[
            true,
            "call-signature",
            "arrow-call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration",
            "object-destructuring",
            "array-destructuring"
        ],
        "unified-signatures":true,
        "curly":[
            true,
            "ignore-same-line"
        ],
        "no-debugger":true,
        "no-duplicate-super":true,
        "no-duplicate-switch-case":true,
        "no-duplicate-variable":[
            true,
            "check-parameters"
        ],
        "no-dynamic-delete":true,
        "no-empty":true,
        "no-invalid-this":true,
        "no-return-await":true,
        "no-string-literal":true,
        "no-switch-case-fall-through":true,
        "no-tautology-expression":true,
        "no-unsafe-finally":true,
        "no-unused-expression":[
            true,
            "allow-fast-null-checks"
        ],
        "no-var-keyword":true,
        "switch-default":true,
        "triple-equals":[
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "use-isnan":true,
        "cyclomatic-complexity":[
            true,
            15
        ],
        "max-classes-per-file":[
            true,
            1
        ],
        "max-file-line-count":[
            true,
            350
        ],
        "no-duplicate-imports":true,
        "prefer-const":true,
        "array-type":[
            true,
            "array"
        ],
        "class-name":true,
        "comment-format":[
            true,
            "check-space",
            "check-uppercase"
        ],
        "completed-docs":true,
        "encoding":true,
        "file-name-casing":[
            true,
            "pascal-case"
        ],
        "increment-decrement":true,
        "interface-name":[
            true,
            "always-prefix"
        ],
        "newline-per-chained-call":true,
        "no-unnecessary-initializer":true,
        "object-literal-key-quotes":[
            true,
            "consistent-as-needed"
        ],
        "one-line":[
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "ordered-imports":[
            true,
            {
                "import-sources-order":"lowercase-first",
                "named-imports-order":"lowercase-first"
            }
        ],
        "prefer-function-over-method":[
            true,
            "allow-public",
            "allow-protected"
        ],
        "prefer-method-signature":true,
        "prefer-switch":[
            true,
            {
                "min-cases":3
            }
        ],
        "prefer-while":true,
        "space-before-function-paren":[
            true,
            "never"
        ],
        "space-within-parens":true,
        "switch-final-break":true,
        "unnecessary-else":[
            true,
            {
                "allow-else-if":true
            }
        ],
        "variable-name":[
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "align":[
            true,
            "parameters",
            "arguments",
            "statements",
            "members",
            "elements"
        ],
        "eofline":true,
        "import-spacing":true,
        "indent":[
            true,
            "spaces",
            4
        ],
        "linebreak-style":[
            true,
            "LF"
        ],
        "max-line-length":[
            true,
            {
                "limit":120,
                "ignore-pattern":"^import |^export {(.*?)}"
            }
        ],
        "new-parens":true,
        "no-irregular-whitespace":true,
        "semicolon":[
            true,
            "always"
        ],
        "trailing-comma":[
            true,
            {
                "singleline":"never",
                "multiline":"never"
            }
        ],
        "typedef-whitespace": "nospace",
        "whitespace":[
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-type-operator",
            "check-preblock"
        ],
        "no-var-requires": false,
        "object-literal-sort-keys": false
    },
    "rulesDirectory":[

    ]
}
